<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.guet.item.mapper.ItemStockMapper">

    <resultMap id="BaseResultMap" type="cn.edu.guet.item.domain.ItemStock">
            <id property="id" column="id" />
            <result property="stock" column="stock" />
            <result property="itemId" column="item_id" />
    </resultMap>
    <update id="updateByPrimaryKey"></update>

    <select id="selectByItemIdForUpdate" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT * FROM item_stock WHERE item_id = #{itemId} FOR UPDATE
    </select>
    <select id="selectByItemId" resultType="cn.edu.guet.item.domain.ItemStock">
        SELECT * FROM item_stock WHERE item_id = #{itemId}
    </select>

    <insert id="insert" parameterType="cn.edu.guet.item.domain.ItemStock">
        <!-- 插入的表名是item_stock，字段是item_id和stock（与数据库表一致） -->
        INSERT INTO item_stock (item_id, stock)
        VALUES (#{itemId}, #{stock})
    </insert>

    <sql id="Base_Column_List">
        id,stock,item_id

    </sql>
</mapper>
